<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codigoqr.fiap.com.br.leitordecodigo.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView android:id="@+id/imgLogin"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"/>

     <TextView
         android:id="@+id/txtUsuario"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Login"
         android:layout_marginLeft="50dp"
         android:textSize="15dp"
         android:layout_below="@id/imgLogin"
         android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@id/txtUsuario"/>

        <TextView
            android:id="@+id/txtSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Senha"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/edtSenha"
        android:layout_width="270dp"
            android:layout_gravity="center"
        android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@id/txtSenha"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Login"
            android:textColor="@color/TextoBranco"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:onClick="carregar"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
